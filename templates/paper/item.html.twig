{% extends "base.html.twig" %}

{% block body %}

<div class="card text-white bg-primary mt-3 mb-3 text-center" style="max-width: 20rem;">
  <div class="card-header">Ref : {{ paper.reference }}</div>
  <div class="card-body">
    <h4 class="card-title">Nom : {{ paper.name }}</h4>
    <p class="card-text">Quantité : {{paper.quantity}}</p>
  </div>
</div>

<div>
	<button type="button" class="btn btn-primary">Entrée</button>
	<button type="button" class="btn btn-secondary">Sortie</button>
	<button type="button" class="btn btn-danger">Supprimer</button>
</div>




{% endblock %}