{% extends "base.html.twig" %}

{% block body %}

	<div class="card text-white bg-primary mt-3 mb-3 text-center" style="max-width: 20rem;">
		<div class="card-header">Réference :
			{{ supply.reference }}</div>
		<div class="card-body">
			<h4 class="card-title">Nom :
				{{ supply.name }}</h4>
			<p class="card-text">Machine associée :
				{{ supply.machine}}</p>
			<p class="card-text">Quantité :
				{{supply.quantity}}</p>
		</div>
	</div>

	<div>
		<button type="button" class="btn btn-primary">Entrée</button>
		<button type="button" class="btn btn-secondary">Sortie</button>
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{path('supply_delete',{'id':supply.id}) }}">
				<button type="button" class="btn btn-danger">Supprimer</button>
			</a>
		{% endif %}
	</div>


{% endblock %}
